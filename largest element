#include<iostream>
#include<climits>
using namespace std;
int main(){
    int n;
    n=5;
    int a[n]={8,4,2,1,7};
    int max=INT_MIN;
    cout<<"the array:"<<endl;
    for(int j=0;j<n;j++){
        cout<<a[j]<<" ";
    }
    cout<<endl;
    for(int i=0;i<n;i++){
        if(a[i]>max){
            max=a[i];
        }
    }
    cout<<"The largest element present is:"<<max;
    return 0;
}
